<%- if controller_name != 'sessions' %>
  <%= link_to t('global.actions.sign.in'), new_session_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('global.actions.sign.up'), new_registration_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "#{t('global.actions.verb.forgot')} #{t('activerecord.attributes.user.password')}?".downcase.capitalize, new_password_path(resource_name) %><br />
<% end %>
