<h2><%= "#{t('global.actions.verb.forgot')} #{t('activerecord.attributes.user.password')}?".downcase.capitalize %></h2>

<div class="row">
  <div class="col-md-6 buffer-top">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group buffer-bottom">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: t('activerecord.attributes.user.email'), class: 'form-control' %>
      </div>

      <div class="actions buffer-bottom">
        <%= f.submit t('form.devise.send_me_reset_password_instructions'), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
