<h2><%= t('global.actions.sign.up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col-md-6 buffer-top">

      <div class="form-group buffer-bottom">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group buffer-bottom">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group buffer-bottom">
        <%= f.label :password, "#{t('activerecord.attributes.user.password')} (#{@minimum_password_length} #{t('form.devise.characters_minimum')})".downcase.capitalize %>
        <%= f.password_field :password, autocomplete: t('form.devise.new_password'), class: 'form-control' %>
      </div>

      <div class="form-group buffer-bottom">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: t('form.devise.new_password'), class: 'form-control' %>
      </div>

      <div class="actions buffer-bottom">
        <%= f.submit t('global.actions.sign.up'), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>

<% end %>

<%= render "devise/shared/links" %>
