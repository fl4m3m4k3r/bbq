<h2><%= t('global.actions.sign.in') %></h2>

<div class="row">
  <div class="col-md-6 buffer-top">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group buffer-bottom">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: t('activerecord.attributes.user.email'), class: 'form-control' %>
      </div>

      <div class="form-group buffer-bottom">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: t('form.devise.current_password'), class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group buffer-bottom">
          <%= f.check_box :remember_me%>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions buffer-bottom">
        <%= f.submit t('global.actions.sign.in'), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
