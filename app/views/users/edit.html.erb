<h2><%= "#{t('global.actions.noun.edit')} #{t('global.profile.of')}".downcase.capitalize %></h2>

<div class="row">
  <div class="col-md-6 buffer-top">
    <%= form_for @user, html: { multipart: true } do |f| %>
      <%= render partial: 'partials/form_errors', locals: {model: @user} %>

      <div class="form-group buffer-bottom">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group buffer-bottom">
        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>

      <div class="form-group buffer-bottom">
        <%= f.label :avatar %>
        <p><%= image_tag(@user.avatar.thumb.url) if @user.avatar? %></p>
        <%= f.file_field :avatar %>
      </div>

      <div class="actions buffer-bottom">
        <%= f.submit t('global.actions.verb.save'), class: 'btn btn-primary' %> <%= t('global.word.or') %> <%= link_to t('global.actions.verb.back'), :back %>
      </div>

      <p class="buffer-top">
        <%= link_to "#{t('global.actions.verb.change')} #{t('activerecord.attributes.user.password')}".downcase.capitalize, edit_user_registration_path %>
      </p>
    <% end %>
  </div>
</div>
